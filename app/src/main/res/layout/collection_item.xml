<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_collection_item"
        android:layout_marginTop="@dimen/text_margin_collection_item"
        android:textColor="@color/collections_title_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/collection_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Интегралы" />

    <TextView
        android:id="@+id/collection_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_collection_item"
        android:layout_marginBottom="@dimen/text_margin_collection_item"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_title"
        tools:text="Качмазов А.А" />

    <TextView
        android:id="@+id/collection_questions_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_collection_item"
        android:layout_marginBottom="@dimen/text_margin_collection_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="27 вопросов" />
</androidx.constraintlayout.widget.ConstraintLayout>