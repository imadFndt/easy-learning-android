<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_collection_item"
        android:layout_marginTop="@dimen/text_margin_collection_item"
        android:textColor="@color/collections_title_text"
        android:textSize="18sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/collection_description"
        app:layout_constraintEnd_toStartOf="@id/collection_questions_amount"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Интегралы" />

    <TextView
        android:id="@+id/collection_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_collection_item"
        android:paddingStart="@dimen/text_margin_collection_item"
        android:paddingEnd="@dimen/text_padding_collection_description"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/collection_favorite"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_title"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In commodo commodo lacus, at finibus ipsum feugiat sit amet. Pellentesque ac libero ut nisl accumsan laoreet id eget enim" />

    <TextView
        android:id="@+id/collection_questions_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_collection_item"
        android:layout_marginEnd="@dimen/text_margin_collection_item"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="27 вопросов" />

    <ImageView
        android:id="@+id/collection_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/text_margin_collection_item"
        android:contentDescription="@string/favorite_description"
        android:src="@drawable/ic_baseline_bookmark_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_questions_amount"
        app:layout_constraintVertical_bias="0"
        app:tint="@color/favorite_bookmark" />
</androidx.constraintlayout.widget.ConstraintLayout>